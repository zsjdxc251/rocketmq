<configuration>
	　　　　　　
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		　　　　　　
		<encoder>
			　　　　　　　　
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{200}.%M[%L] - %msg%n</pattern>
			　　　　　　
		</encoder>
		　　　　
	</appender>
	<root level="DEBUG">
		<appender-ref ref="STDOUT"/>　　　　
	</root>
</configuration>